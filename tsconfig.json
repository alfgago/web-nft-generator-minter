{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/MyNfts/GuestsList/MyNftGuestsItem/MyNftGuestsItemStyles.ysx",
    "src/utils/templateFabric.js",
    "src/components/NftBuilder/ConfirmationStep/index.jsx",
    "src/components/NftBuilder/DesignStep/index.jsx",
    "src/utils/generateShapes.jsx"
  ],
  "exclude": ["node_modules"]
}
